<header>
  <div class="icon-container">
    <%= link_to image_tag("Mercari_Bot.png", class:"mercari_bot_icon"), items_path %>
  </div>
</header>
<main>
    <div class="registration-title">
    <h2 class="registration">ログイン</h2>
  </div>
  
  <%= form_with model: @user,  url: user_session_path , local: true do |form| %>
    <div  class="registration-contents">
      <div class="registration-content">
        <p class="registration-item">メールアドレス</p>
        <%= form.text_field :email, class: "registration-form" %> 
      </div>
      <div class="registration-content">
        <p class="registration-item">パスワード</p>
        <%= form.text_field :password, class: "registration-form" %>
      </div>
      <div>
        <%= form.submit "登録" ,class:"submit-btn" %>
      </div>
    </div>
  <% end %> 
</main>
